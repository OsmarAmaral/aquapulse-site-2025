<!-- Botão de voltar ao topo -->


<script>

    function checkBusinessHours() {
        let now = new Date();
        let hours = now.getHours();
        let status = document.getElementById("status");
        if (hours >= 8 && hours <= 18) {
            status.innerHTML = "<span class='open-status'>Aberto</span>";
        } else {
            status.innerHTML = "<span class='closed-status'>Fechado</span>";
        }
    }

    checkBusinessHours();
</script>
